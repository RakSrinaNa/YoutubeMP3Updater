<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%-5level [%t] - %C{1}.%method:%L} - %msg%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="logs/YoutubeMP3Updater.log" filePattern="logs/YoutubeMP3Updater-%d{yyyy-MM-dd}-%i.log">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %l - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="150"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="fr.mrcraftcod.utils" level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Logger name="fr.mrcraftcod.youtubemp3updater" level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile"/>
        </Logger>
        <Root level="error">
        </Root>
    </Loggers>
</Configuration>